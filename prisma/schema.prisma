  description  String
  quantity     Decimal  @db.Decimal(15, 4)
  unitPrice    Decimal  @db.Decimal(15, 2)
  gctRate      GCTRate  @default(STANDARD)
  gctAmount    Decimal  @db.Decimal(15, 2)
  total        Decimal  @db.Decimal(15, 2)
  
  // UOM tracking
  uomId        String?
